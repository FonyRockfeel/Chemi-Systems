@model ChemiSystems.Models.UserSettingsModel
@{
    ViewBag.Title = "Settings";
    Layout = "_ProfileLayout.cshtml";
}



    @using (Html.BeginForm("SaveSettings", "AccountProfile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">Profile settings</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })       
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Country, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control input-md bfh-countries" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Street, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
            </div>
        </div>       
        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" class="btn btn-default pull-right" value="Save" />
            </div>
        </div>
    }