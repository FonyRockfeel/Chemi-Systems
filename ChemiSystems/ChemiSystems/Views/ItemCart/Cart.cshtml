
@{
    ViewBag.Title = "Cart";
}

<!-- First section -->
<div class="container">
    <div class="row" style="padding-top: 20px;">

        <div class="panel panel-default" style="margin-bottom: 0px;">
            <div class="panel-heading panel-heading-custom text-center col-md-6 hidden-sm hidden-xs">
                <h5>Item</h5>
            </div>
            <div class="panel-heading panel-heading-custom text-center col-md-2 hidden-sm hidden-xs">
                <h5>Price</h5>
            </div>
            <div class="panel-heading panel-heading-custom text-center col-md-2 hidden-sm hidden-xs">
                <h5>Quantity</h5>
            </div>
            <div class="panel-heading panel-heading-custom text-center col-md-2 hidden-sm hidden-xs">
                <h5>Subtotal</h5>
            </div>
            <div class="panel-heading panel-heading-custom text-center col-md-12 visible-sm visible-xs">
                <h5>Cart</h5>
            </div>
            <section class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row cart-wrapper">
                            <div class="col-md-2">
                                <img src="img/hydrochloric-acid/hydrochloric-acid.jpg" class="img-responsive" width="100">
                            </div>
                            <div class="col-md-10">
                                <h3 style="margin-bottom: 2px;"><a href="#">Hydrochloric acid</a></h3>
                                <h6 style="margin: 0px;">#211145</h6>
                                <p>Hydrochloric acid is a clear, colorless, highly pungent solution of hydrogen chloride (HCl) in water. It is a highly corrosive, strong mineral acid with many industrial uses.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <h3 class="text-center">5 $/g</h3>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <div class="input-group input-btn-grp" style="width: 95%;">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-number" data-type="minus" data-field="quant[1]">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </span>
                            <input id="quantity-input" type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="9999">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[1]">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                        <button type="button" class="btn btn-warning btn-xs" style="margin-left: 10px;"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <h3 class="text-center">5 $</h3>
                    </div>
                </div>
            </section>
            <section class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row cart-wrapper">
                            <div class="col-md-2">
                                <img src="img/hydrochloric-acid/hydrochloric-acid.jpg" class="img-responsive" width="100">
                            </div>
                            <div class="col-md-10">
                                <h3 style="margin-bottom: 2px;"><a href="#">Hydrochloric acid</a></h3>
                                <h6 style="margin: 0px;">#211145</h6>
                                <p>Hydrochloric acid is a clear, colorless, highly pungent solution of hydrogen chloride (HCl) in water. It is a highly corrosive, strong mineral acid with many industrial uses.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <h3 class="text-center">5 $/g</h3>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <div class="input-group input-btn-grp" style="width: 95%;">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-number" data-type="minus" data-field="quant[1]">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </span>
                            <input id="quantity-input" type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="9999">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[1]">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                        <button type="button" class="btn btn-danger btn-xs" style="margin-left: 10px;"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                    </div>
                    <div class="col-md-2 cart-wrapper">
                        <h3 class="text-center">5 $</h3>
                    </div>
                </div>
            </section>
        </div>
        <section class="row">
            <div class="col-md-4 col-sm-4 col-xs-4 pull-right">
                <div class="panel panel-default" style="border-top: none; margin-bottom: 0px;">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="text-center">Total:</h3>
                            </div>
                            <div class="col-md-6">
                                <h3 class="text-center">5 $</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-md-2 pull-right">
                <div class="panel panel-default" style="border-top: none;">
                    <div class="panel-body text-center">
                        <button class="btn btn-primary btn-large" type="button" id="btnLogin" class="btn">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
